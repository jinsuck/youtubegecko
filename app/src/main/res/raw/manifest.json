{
  "manifest_version": 2,
  "name": "messaging",
  "version": "1.0",
  "description": "Youtube control extension.",

  "browser_specific_settings": {
    "gecko": {
      "id": "messaging@imvu.com"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts":[{
    "matches": ["<all_urls>"],
    "run_at": "document_end",
    "js": ["content.js"]
  }],
  "permissions": [
    "nativeMessaging",
    "nativeMessagingFromContent",
    "geckoViewAddons"
  ]
}